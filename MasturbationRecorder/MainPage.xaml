<Page
    x:Class="MasturbationRecorder.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MasturbationRecorder"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Name="Root">
        <CommandBar Name="Menu">
            <AppBarButton Icon="OpenFile" Label="Pick record" Click="OpenFileButton_Click"/>
            <AppBarButton Icon="Save" Label="Save"/>
            <CommandBar.Content>
                <TextBlock Name="StateBar" FontSize="30" FontStretch="SemiCondensed" Margin="100,0,0,0"/>
            </CommandBar.Content>
        </CommandBar>
        <Border BorderBrush="LightGray" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Canvas Name="RectanglesCanvas" Width="300" Height="300"></Canvas>
        </Border>
    </Grid>
</Page>
